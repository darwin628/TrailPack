PORT=4000
JWT_SECRET=replace-with-a-strong-secret
CORS_ORIGIN=*

# Local fallback (used only when DATABASE_URL is empty)
DB_PATH=./server/trailpack.db

# Production persistence (recommended)
DATABASE_URL=
# For local postgres without SSL, set disable
PGSSL=require

# Forgot-password demo mode:
# true -> API will return reset code in response (convenient but less secure)
EXPOSE_RESET_CODE=false

# Email provider (Resend)
RESEND_API_KEY=
MAIL_FROM="TrailPack <noreply@your-domain.com>"
APP_URL=
